---
import Layout from '../../layouts/Layout.astro';
import QuoteResults from '../../components/lead-form/QuoteResults';
---

<Layout title="Your Instant Quote - Junk Hauler Boise">
	<div class="min-h-screen bg-slate-50 py-12">
		<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
			<div class="bg-white rounded-2xl shadow-xl p-8">
				<div class="text-center mb-8">
					<div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-green-100">
						<svg class="h-10 w-10 text-green-600" fill="none" viewBox="0 0 24 24" strokeWidth="2" stroke="currentColor">
							<path strokeLinecap="round" strokeLinejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
						</svg>
					</div>

					<h1 class="mt-6 font-display text-3xl font-semibold text-slate-900">
						Here's Your Instant Quote!
					</h1>

					<p class="mt-4 text-lg text-slate-600">
						Our AI has analyzed your photos and generated an estimate. We'll contact you shortly to confirm details.
					</p>
				</div>

				<QuoteResults client:load />

				<div class="mt-8 rounded-lg bg-blue-50 p-6">
					<h2 class="font-display text-lg font-semibold text-slate-900 text-center">
						What happens next?
					</h2>
					<ul class="mt-4 space-y-3 text-slate-700">
						<li class="flex items-start">
							<svg class="mt-0.5 h-5 w-5 text-blue-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" strokeWidth="1.5" stroke="currentColor">
								<path strokeLinecap="round" strokeLinejoin="round" d="M4.5 12.75l6 6 9-13.5" />
							</svg>
							<span class="ml-3">
								<span class="font-medium">Within 1 hour:</span> We'll call or text you to confirm your quote and answer any questions
							</span>
						</li>
						<li class="flex items-start">
							<svg class="mt-0.5 h-5 w-5 text-blue-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" strokeWidth="1.5" stroke="currentColor">
								<path strokeLinecap="round" strokeLinejoin="round" d="M4.5 12.75l6 6 9-13.5" />
							</svg>
							<span class="ml-3">
								<span class="font-medium">Schedule pickup:</span> Choose a convenient time for your junk removal
							</span>
						</li>
						<li class="flex items-start">
							<svg class="mt-0.5 h-5 w-5 text-blue-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" strokeWidth="1.5" stroke="currentColor">
								<path strokeLinecap="round" strokeLinejoin="round" d="M4.5 12.75l6 6 9-13.5" />
							</svg>
							<span class="ml-3">
								<span class="font-medium">We haul it away:</span> Same/next-day service with eco-friendly disposal
							</span>
						</li>
					</ul>
				</div>

				<div class="mt-8 flex flex-col gap-4 sm:flex-row sm:justify-center">
					<a href="tel:8445435865" class="inline-flex items-center justify-center rounded-full bg-blue-600 px-8 py-3 text-base font-semibold text-white hover:bg-blue-500">
						Call Us Now: 844-543-JUNK
					</a>
					<a href="/" class="inline-flex items-center justify-center rounded-full border border-slate-300 bg-white px-8 py-3 text-base font-semibold text-slate-900 hover:bg-slate-50">
						Back to Home
					</a>
				</div>

				<div class="mt-8 border-t border-slate-200 pt-8">
					<p class="text-sm text-slate-600">
						Didn't receive a confirmation email? Check your spam folder or{' '}
						<a href="mailto:team@junkhaulerboise.com" class="text-blue-600 hover:text-blue-700 font-medium">
							contact us directly
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</Layout>
